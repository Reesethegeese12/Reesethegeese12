def names():
 names = [ "Alice", "Bob", "Charlie", "David", "Emma", "Frank", "Grace", "Hannah", "Ian", "Jack", "Katie", "Liam", "Mia", "Nathan", "Olivia"]

while True:
        print("1. Search for a Name")

